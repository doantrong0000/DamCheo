<UserControl x:Class="BimSpeedStructureBeamDesign.BeamRebar.View.SubViews.ThepChongPhinhView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:BimSpeedStructureBeamDesign.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:BimSpeedUtils.WPFUtils.Converters;assembly=BimSpeedUtils"
             MinWidth="650"
             mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BimSpeedStructureBeamDesign;component/Resources/ResourceString.vn.xaml" />
                <ResourceDictionary Source="pack://application:,,,/BimSpeedUtils;component/WPFUtils/ResourceDictionaries/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ComboBox"
                   BasedOn="{StaticResource ResourceKey=ComboBoxStyle}">
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="BorderBrush"
                        Value="Gray" />
            </Style>
            <Style TargetType="TextBox"
                   BasedOn="{StaticResource ResourceKey=TextBoxStyle}">
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="BorderBrush"
                        Value="Gray" />
            </Style>

            <Style TargetType="RadioButton"
                   BasedOn="{StaticResource RadioButtonStyle}">
            </Style>

            <Style TargetType="GroupBox"
                   BasedOn="{StaticResource GroupBoxStyle}">
            </Style>

            <Style TargetType="Button"
                   BasedOn="{StaticResource ResourceKey=ButtonStyle}" />
            <converters:FeetToIntString x:Key="FeetToIntString" />
            <converters:IntToStringConverter x:Key="IntToStringConverter" />
            <converters:RadioBoolToIntConverter x:Key="RadioBoolToIntConverter" />

            <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />

            <converters:RevitDiameterToStringConverter x:Key="RevitDiameterToStringConverter" />

        </ResourceDictionary>
    </FrameworkElement.Resources>


    <GroupBox>
        <Grid Height="320">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Image Height="210"
                                      
                                           Grid.RowSpan="3"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Source="../Images/GiaCuongBung1.png"
                                    >
            </Image>



            <Image Height="140"
                                   
                                           Grid.Row="0" Grid.RowSpan="3"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Source="../Images/GiaCuongBung2.png"
                                    >
            </Image>


            <StackPanel
      
                
                Orientation="Horizontal" Margin="80,-10,0,0" Grid.RowSpan="2" Grid.Row="0"
                        Grid.Column="1">

                <TextBox 
                    PreviewTextInput="UIElement_OnPreviewTextInput"
                    Height="25"
                    Width="50"
                    VerticalContentAlignment="Center"
                    Text="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.Setting.ThepCauTaoGiuaDamModel.LengthGoInColumn,Converter={StaticResource FeetToIntString}}" >
                </TextBox>

                <TextBlock >(mm)</TextBlock>


            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="0" 
                                                Grid.ColumnSpan="2"
                                                Grid.RowSpan="3"
                                        VerticalAlignment="Top"        
                                                Orientation="Horizontal"
                                    >
                <TextBlock  
                                         TextWrapping="WrapWithOverflow">
                                  Anti-Shinkage reinforcement When H > :
                </TextBlock>

                <StackPanel Orientation="Horizontal">
                    <TextBox 
                                                Width="50"
                                                PreviewTextInput="UIElement_OnPreviewTextInput"
                                       
                                                HorizontalAlignment="Stretch"
                                                VerticalContentAlignment="Center"
                                                Height="25"
                                                Text="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.Setting.ThepCauTaoGiuaDamModel.MinBeamHeight,Converter={StaticResource FeetToIntString}}">
                    </TextBox>
                    <TextBlock >(mm)</TextBlock>
                </StackPanel>
            </StackPanel>







            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                Margin="200 -10 0 0"
                                                
                                              
                                          >
                <ComboBox Width="60" ItemsSource="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.BeamRebarRevitData.BarDiameters}"
                                                  SelectedItem="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.Setting.ThepCauTaoGiuaDamModel.BarDiameter}"
                                        >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


            </StackPanel>


            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" 
                                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="167,82,0,0" Width="146" Grid.ColumnSpan="2" Grid.RowSpan="2">

                <ComboBox
                                            
                                            Width="60"
                                            ItemsSource="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.BeamRebarRevitData.BarDiameters}"
                                                  SelectedItem="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.Setting.ThepCauTaoGiuaDamModel.BarDiameterForBarGoInColumn}"
                                             >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>@</TextBlock>
                    <TextBox Width="60"
                                                     PreviewTextInput="UIElement_OnPreviewTextInput"
                                           
                                                     Height="25"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalContentAlignment="Center"
                                                     Text="{Binding BeamRebarViewModel.BeamRebarSettingViewModel.Setting.ThepCauTaoGiuaDamModel.Distance,Converter={StaticResource FeetToIntString}}">
                    </TextBox>

                    <TextBlock>(mm)</TextBlock>
                </StackPanel>







            </StackPanel>




            <StackPanel Margin="205,0,54,0" Grid.Row="1"
                                            Grid.Column="0" VerticalAlignment="Center"      
                                            Orientation="Vertical"
            >

                <StackPanel Orientation="Horizontal">
                    <ComboBox 
                        Width="50"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Height="25"
                        ItemsSource="{Binding ListSoLuongThepChongPhinh}"
                        SelectedItem="{Binding SoLuongLopThepChongPhinh}">
                    </ComboBox>
                </StackPanel>
            </StackPanel>




        </Grid>
    </GroupBox>

</UserControl>