<UserControl x:Class="BimSpeedRebar.RebarTools.CutRebarAtPoint.Views.CrackedBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Converters="clr-namespace:BimSpeedUtils.WPFUtils.Converters;assembly=BimSpeedUtils"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="700">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BimSpeedUtils;component/WPFUtils/ResourceDictionaries/Styles.xaml" />
                <ResourceDictionary Source="/BimSpeedUtils;component/WPFUtils/controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/BimSpeedRebar;component/Resources/ResourceString.en.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Converters:FeetToIntString x:Key="FeetToIntString"></Converters:FeetToIntString>
            <Converters:RadioBoolToIntConverter x:Key="RadioBoolToIntConverter"></Converters:RadioBoolToIntConverter>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0"
                  Header="Settings">
            <StackPanel Orientation="Vertical">
                <Separator BorderBrush="IndianRed"
                           BorderThickness="1"></Separator>
                <Grid DataContext="{Binding LengthOrDiameterA}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Row="0"
                               Text="A (mm)"></TextBlock>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                               Grid.Row="1"
                           
                               Text="Length"></TextBlock>
                    <RadioButton
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        
                        IsChecked="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=1}"
                                 Grid.Column="1"
                                 Grid.Row="0"></RadioButton>
                    <RadioButton 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        
                        IsChecked="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=2}"
                                 Grid.Column="1"
                                 Grid.Row="1"></RadioButton>
                    <Grid Grid.Column="2"
                          IsEnabled="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=1}"
                          Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            
                            Text="{Binding N_Cracked,UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="0"></TextBox>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1">
                            <TextBlock Height="20">x  Φ</TextBlock>
                            <TextBlock Height="20"
                                       Text="{Binding Diameter,Converter={StaticResource FeetToIntString}}"></TextBlock>
                            <TextBlock Height="20"> =</TextBlock>
                            <TextBlock Text="{Binding LengthByDiameterCracked,Converter={StaticResource FeetToIntString}}"
                                       Height="20"></TextBlock>
                            <TextBlock Height="20">mm</TextBlock>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="2"
                          Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox 
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{Binding LengthCracked,Converter={StaticResource FeetToIntString}}"
                                 IsEnabled="{Binding IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=2}"
                                 Grid.Column="0"></TextBox>
                    </Grid>
                </Grid>
                <Separator BorderBrush="IndianRed"
                           BorderThickness="1"></Separator>
                <Grid DataContext="{Binding LengthOrDiameterB}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Text="Length"></TextBlock>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        
                        Grid.Column="0"
                               Grid.Row="0"
                               Text="B (mm)"></TextBlock>
                    <RadioButton
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        
                        IsChecked="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=1}"
                                 Grid.Column="1"
                                 Grid.Row="0"></RadioButton>
                    <RadioButton
                        
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        
                        IsChecked="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=2}"
                                 Grid.Column="1"
                                 Grid.Row="1"></RadioButton>
                    <Grid Grid.Column="2"
                          IsEnabled="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=1}"
                          Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox 
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            
                            Text="{Binding N_Cracked,UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="0"></TextBox>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1">
                            <TextBlock Height="20">x  Φ</TextBlock>
                            <TextBlock Height="20"
                                       Text="{Binding Diameter,Converter={StaticResource FeetToIntString}}"></TextBlock>
                            <TextBlock Height="20"> =</TextBlock>
                            <TextBlock Text="{Binding LengthByDiameterCracked,Converter={StaticResource FeetToIntString}}"
                                       Height="20"></TextBlock>
                            <TextBlock Height="20">mm</TextBlock>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="2"
                          Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox 
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            
                            Text="{Binding LengthCracked,Converter={StaticResource FeetToIntString}}"
                                 IsEnabled="{Binding  IsByDiameterCracked,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=2}"
                                 Grid.Column="0"></TextBox>
                    </Grid>
                </Grid>
                <Separator BorderBrush="IndianRed"
                           BorderThickness="1"></Separator>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1"
                  Header="Image">
            <Image  Source="./Images/crackedbar1.PNG"></Image>
        </GroupBox>
    </Grid>
</UserControl>