<UserControl x:Class="BimSpeedRebar.RebarTools.CutRebarAtPoint.Views.LappedBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Converters="clr-namespace:BimSpeedUtils.WPFUtils.Converters;assembly=BimSpeedUtils"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="700">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BimSpeedUtils;component/WPFUtils/ResourceDictionaries/Styles.xaml" />
                <ResourceDictionary Source="/BimSpeedUtils;component/WPFUtils/controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/BimSpeedRebar;component/Resources/ResourceString.en.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Converters:FeetToIntString x:Key="FeetToIntString"></Converters:FeetToIntString>
            <Converters:RadioBoolToIntConverter x:Key="RadioBoolToIntConverter"></Converters:RadioBoolToIntConverter>
            <Converters:BoolRadioConverter x:Key="BoolRadioConverter"></Converters:BoolRadioConverter>
            <Converters:BoolRadioConverter x:Key="InverseBoolRadioConverter"
                                      Inverse="True"></Converters:BoolRadioConverter>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0"
                  Header="Setting">
            <Grid DataContext="{Binding LengthOrDiameter}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"></ColumnDefinition>
                    <ColumnDefinition Width="0.2*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0"
                      >
                    A(mm):
                </TextBlock>
                <TextBlock Grid.Column="0"
                           Grid.Row="1"
                           Text="Lap Length"
                           Width="83"></TextBlock>

                <RadioButton IsChecked="{Binding IsByDiameter,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=1}"
                             Grid.Column="1"
                             Grid.Row="0"></RadioButton>
                <RadioButton IsChecked="{Binding IsByDiameter,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=2}"
                             Grid.Column="1"
                             Grid.Row="1"></RadioButton>
                <Grid IsEnabled="{Binding IsByDiameter,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=1}"
                      Grid.Column="2"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding N_Lap,UpdateSourceTrigger=PropertyChanged}"
                             Grid.Column="0"></TextBox>
                    <StackPanel Orientation="Horizontal"
                                Grid.Column="1">
                        <TextBlock Height="20">x  Φ</TextBlock>
                        <TextBlock Height="20"
                                   Text="{Binding Diameter,Converter={StaticResource FeetToIntString}}"></TextBlock>
                        <TextBlock Height="20"> =</TextBlock>
                        <TextBlock Text="{Binding LengthByDiameter,Converter={StaticResource FeetToIntString}}"
                                   Height="20"></TextBlock>
                        <TextBlock Height="20">mm</TextBlock>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox IsEnabled="{Binding IsByDiameter,Converter={StaticResource RadioBoolToIntConverter},ConverterParameter=2}"
                             Text="{Binding Length,Converter={StaticResource FeetToIntString}}"
                             Grid.Column="0"></TextBox>

                    <TextBlock Height="20" Margin="6,8,0,8" Width="30" Grid.Column="1">mm</TextBlock>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1"
                  Header="Image">
            <Image  Source="./Images/LAP1.PNG"></Image>
        </GroupBox>
    </Grid>
</UserControl>